<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="user_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/contentTxt</item>
    </style>

    <style name="user_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/controlText</item>
    </style>


    <style  name="Theme.MainActivity" parent="android:Theme">
        <!-- 是否允许有标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 提示背景图片 -->

        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否允许背景灰暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="topbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/menu</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.0dip</item>
    </style>

    <style name="topbar_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">5dp</item>
    </style>
    <style name="topbar_text2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/write</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="user_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/controlText</item>
    </style>
    <style name="back_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/actions_btnback_selector</item>
    </style>
</resources>
