<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/menu" android:endColor="@color/menu"
                android:angle="270" />
            <stroke android:width="1dip" android:color="@color/menu" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/menu" android:endColor="@color/menu"
                android:angle="270" />
            <stroke android:width="1dip" android:color="@color/menu" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#2d2f67ff" android:endColor="#2d2f67ff"
                android:angle="180" />
            <stroke android:width="1dip" android:color="#2d2f67ff" />
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>